{
  "compilerOptions": {
  "target": "es2017",
  "lib": ["es6"],
  "module": "commonjs",
  "rootDir": "./src",
  "baseUrl": ".",
  "paths": {
    "@user/*": ["./src/user/*"],
    "@core/*": ["./src/core/*"]
  },
  "typeRoots": [
    "./node_modules/@types",
    "./src/types"
  ],
  "resolveJsonModule": true,
  "allowJs": true,
  "outDir": "./dist",
  "removeComments": true,
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
